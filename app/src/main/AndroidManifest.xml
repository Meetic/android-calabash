<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meetic.calabash_template">

    /* We need internet permission for Calabash-Android to run. see: https://github.com/calabash/calabash-android/issues/278 */
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".LoginActivity" android:label="LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ListActivity" android:label="ListActivity"/>

        <activity android:name=".DetailActivity" android:label="DetailActivity"/>

    </application>

</manifest>
